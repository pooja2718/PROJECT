<%- include('partials/header') %>

<div class="container mt-4">
  <h2 class="text-center">Dashboard</h2>

  <div class="row">
    <% blogs.forEach(blog => { %>
      <div class="col-md-6 col-lg-4 mb-4">
        <div class="card">
          <img src="<%= blog.imageUrl %>" class="card-img-top" alt="Blog Image">
          <div class="card-body">
            <h5 class="card-title"><%= blog.title %></h5>
            <p class="card-text"><%= blog.content.substring(0, 100) %>...</p>
            <p class="text-muted">By <%= blog.author.username %></p>
            
            <% if (user && user._id.toString() === blog.author._id.toString()) { %>
              <a href="/blogs/<%= blog._id %>/edit" class="btn btn-warning">Edit</a>
              <form action="/blogs/<%= blog._id %>?_method=DELETE" method="POST" class="d-inline">
                <button type="submit" class="btn btn-danger">Delete</button>
              </form>
            <% } %>
          </div>
        </div>
      </div>
    <% }) %>
  </div>
</div>
